{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node App",
      "program": "${workspaceFolder}/Back-end/server.js", // replace with your entry file
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/public/**/**/*.js"
      ],
      "console": "integratedTerminal",
      "restart": true, // auto restart on changes
      "runtimeExecutable": "nodemon",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
